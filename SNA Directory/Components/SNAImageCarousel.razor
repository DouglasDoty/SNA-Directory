<div id="carouselControl" class="carousel slide p-0" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@GetSNABanner()" class="d-block w-100" alt="...">
        </div>
        @for (int i = 1; i < 6; i++)
        {
            <div class="carousel-item">
                <img src="@GetSnaImage(i)" class="d-block w-100" alt="...">
            </div>

        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselControl" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselControl" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


@code {
    [Parameter]
    public AreaModel? Area { get; set; }

    private string GetSNABanner()
    {
        if (Area is not null && Area.DNRId > 0)
        {
            return $"https://images.dnr.state.mn.us/destinations/snas/slides/banners/sna{Area.DNRId.ToString("00000")}_banner.jpg";
        }
        else
        {
            return "../images/LgtGreen.png";
        }
    }

    private string GetSnaImage(int i = 1)
    {
        if (Area is not null && Area.DNRId > 0)
        {
            return $"https://images.dnr.state.mn.us/destinations/snas/slides/sna{Area.DNRId.ToString("00000")}_{i.ToString("0")}.jpg";
        }
        else
        {
            return "../images/LgtGreen.png";
        }
    }

}
